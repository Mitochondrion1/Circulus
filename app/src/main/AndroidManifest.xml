<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game.main">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/project_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/project_icon_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.GameProject">
        <activity
            android:name="com.game.main.HighScoresActivity" />
        <activity
            android:name="com.game.main.CreditsActivity" />
        <activity
            android:name="com.game.main.SettingsActivity" />

        <service
            android:name="com.game.main.MusicService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.game.main.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.game.main.MainActivity" />
    </application>

</manifest>